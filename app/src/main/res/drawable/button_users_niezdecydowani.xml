<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <shape>
            <stroke android:width="2dp" android:color="#3599DB" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="5dp" android:topLeftRadius="0dp" android:topRightRadius="5dp" />
        </shape>
    </item>

    <item android:state_enabled="false">

        <shape>
            <stroke android:width="2dp" android:color="#3599DB" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="5dp" android:topLeftRadius="0dp" android:topRightRadius="5dp" />
        </shape>

    </item>
    <item>
        <shape>
            <stroke android:width="3dp" android:color="#8F45AD" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="5dp" android:topLeftRadius="0dp" android:topRightRadius="5dp" />
        </shape>
    </item>
</selector>